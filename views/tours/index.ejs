<% layout('layouts/boilerplate')%>

<div id="cluster-map" class="mb-3"></div>
<div class="container mx-auto">
<h1 class="text-white text-center"> <span>ALL PLACES</span> </h1>


<% for (let tour of tours){%>
<div  class="card mb-3"  >
    <div  class="row ">
        <div class="col-md-3">
            <%if(tour.images.length) {%>
            <img class="img-fluid" alt="" src="<%=tour.images[0].url%>">
            <% }else {%>
            <img class="img-fluid" alt=""
                src="https://images.unsplash.com/photo-1521336575822-6da63fb45455?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80">
            <% } %>
        </div>
        <div  class="col-md-8">
            <div class="card-body" >
                <h5 class="card-title"><%= tour.title %> </h5>

                <p class="card-text"><%= tour.description %></p>
                <p class="card-text">
                    <small class="text-muted"><%= tour.location%></small>
                </p>
                <a class="btn btn-primary" href="/tours/<%=tour._id%>">View <%=tour.title%></a>
            </div>
        </div>
    </div>
</div>
<% }%>

</div>

<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const tours = { features: <%- JSON.stringify(tours) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>